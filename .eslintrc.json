{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "modules": true,
    "classes": true,
    "arrowFunctions": true,
    "blockBindings": true,
    "forOf": true,
    "destructuring": true,
    "defaultParams": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "jsx": true,
    "templateStrings": true,
    "destructuring": true,
    "defaultParams": true,
    "spread": true,
    "restParams": true
  },
  "plugins": [
    "react"
  ],
  "extends": "eslint:recommended",
  "rules": {
    "no-console": 0,
    "comma-dangle": [2, "always-multiline"],
    "strict": 0,
    "no-throw-literal": 2,
    "consistent-this": [1, "that"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "semi": 2,
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "quotes": [2, "single", "avoid-escape"],
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "handle-callback-err": [2, "^(err|.+Err(or)?)$" ],
    "no-shadow-restricted-names": 2,
    "no-use-before-define": [2, "nofunc"],
    "eol-last": 2,
    "no-multiple-empty-lines": [2, {"max": 1}],
    "no-underscore-dangle": 0,
    "object-curly-spacing": [2, "always"],
    "no-trailing-spaces": [2, { "skipBlankLines": false }],
    "space-after-keywords": [2, "always"],
    "jsx-quotes": 2,

    // react plugin: https://github.com/yannickcr/eslint-plugin-react#list-of-supported-rules
    "react/display-name": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-boolean-value": 0,
    "react/jsx-closing-bracket-location": [2, { "selfClosing": "line-aligned", "nonEmpty": "afterProps" }],
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-handler-names": 0,
    "react/jsx-indent-props": [2, 2],
    "react/jsx-key": 0,
    "react/jsx-max-props-per-line": 0,
    "react/jsx-no-bind": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-no-literals": 0,
    "react/jsx-no-undef": 2,
    "react/jsx-pascal-case": 2,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-danger": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-multi-comp": 0,
    "react/no-set-state": 0,
    "react/no-unknown-property": 2,
    "react/prefer-es6-class": 0,
    "react/prop-types": 2,
    "react/react-in-jsx-scope": 2,
    "react/require-extension": [2, { "extensions": [".js", ".jsx"] }],
    "react/self-closing-comp": 2,
    "react/sort-comp": 0,
    "react/wrap-multilines": 2
  }
}
